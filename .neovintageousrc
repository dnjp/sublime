" Type :help nv for help.
set ignorecase

" make ex commands more ergonomic
nnoremap ; :
nnoremap ! :!

nnoremap Q :q!<CR>
nnoremap W :LspSave<CR>
nnoremap gD :LspGotoDiagnostic<CR>
nnoremap gd :LspSymbolDefinition<CR>
nnoremap gr :LspSymbolReferences<CR>
nnoremap gR :LspSymbolRename<CR>
nnoremap gi :LspSymbolImplementation<CR>
nnoremap ge :NextResult<CR>
nnoremap gE :PreviousResult<CR>
nnoremap K :ReplTransferCurrent<CR>

nnoremap <C-J> <C-W><C-J>
nnoremap <C-K> <C-W><C-K>
nnoremap <C-L> <C-W><C-L>
nnoremap <C-H> <C-W><C-H>
